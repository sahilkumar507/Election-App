<!DOCTYPE html>
<html>
<head>
  <title>Admin Dashboard</title>
</head>
<body>
  <h2>Admin Dashboard</h2>
  <p>Welcome Admin {{user.username}}. Here you can manage the election details.</p>
  
  <h3>Vote Counts</h3>
  <ul>
    {{#each votes}}
      <li>{{candidate}}: {{count}} votes</li>
    {{/each}}
  </ul>
  
  <h3>Registered Users</h3>
  <table border="1" cellspacing="0" cellpadding="5">
    <thead>
      <tr>
        <th>ID</th>
        <th>Username</th>
        <th>Role</th>
      </tr>
    </thead>
    <tbody>
      {{#each users}}
        <tr>
          <td>{{this.id}}</td>
          <td>{{this.username}}</td>
          <td>{{this.role}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  
  <p><a href="/dashboard">Back to Dashboard</a></p>
</body>
</html>
